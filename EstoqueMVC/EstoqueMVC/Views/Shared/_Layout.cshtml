<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Estoque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

        <div class="header">
            <ul class="nav nav-pills m-4" >
                <li class="p-2">@Html.ActionLink("Produtos ","index","Produto")</li>
                <li class=" p-2">@Html.ActionLink("Categorias","index","Categorias")</li>
                <li class=" p-2">@Html.ActionLink("Cadastrar Produto","Form","Produto")</li>
            </ul>
            <h3 class="text-muted">
                Sistema de Estoque 
            </h3>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!----coloca todos os conteudos --->
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - EstoqueMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
